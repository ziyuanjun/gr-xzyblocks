<?xml version="1.0"?>
<block>
  <name>fft_scan_py_cc</name>
  <key>xzyblocks_fft_scan_py_cc</key>
  <category>[xzyblocks]</category>
  <import>import xzyblocks</import>
  <make>xzyblocks.fft_scan_py_cc($device, $sampRate, $Nfft, $freqCenter, $freqMin, $freqMax)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Nfft</name>
    <key>Nfft</key>
    <type>int</type>
  </param>
  <param>
    <name>sampRate</name>
    <key>sampRate</key>
    <type>float</type>
  </param>
  <param>
    <name>freqCenter</name>
    <key>freqCenter</key>
    <type>float</type>
  </param>
  <param>
    <name>freqMin</name>
    <key>freqMin</key>
    <type>float</type>
  </param>
  <param>
    <name>freqMax</name>
    <key>freqMax</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>Nfft</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>Nfft</vlen>
  </source>
  <source>
    <name>out1</name>
    <type>float</type>
    <vlen>Nfft</vlen>
  </source>
</block>
